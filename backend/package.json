{
  "name": "qinguoqinchen-ai-2025",
  "version": "0.0.1",
  "description": "侵國侵城 AI 紅隊多模態滲透測試與防禦評估系統 + RAG",
  "author": "侵國侵城團隊",
  "private": true,
  "license": "MIT",
  "main": "src/main.js",
  "type": "commonjs",
  "scripts": {
    "format": "prettier --write \"**/*.js\"",
    "lint": "eslint \"{src,test,tests}/**/*.js\" --fix",
    "clean": "rimraf dist coverage allure-results allure-report test-results logs/temp",
    "start": "node src/main.js",
    "start:dev": "nodemon",
    "start:debug": "nodemon --inspect=0.0.0.0:9229",
    "start:prod": "cross-env NODE_ENV=production node src/main.js",
    "start:test": "cross-env NODE_ENV=test node src/main.js",
    "start:simple": "node simple-server.js",
    "start:simple-dev": "nodemon simple-server.js",
    "build": "echo JavaScript 專案無需編譯",
    "prebuild": "rimraf dist",
    "setup": "pnpm run setup:directories && pnpm run setup:env && pnpm run setup:tests",
    "setup:directories": "node -e \"const fs = require('fs'); ['logs', 'temp', 'uploads', 'cache', 'src/controllers', 'src/services', 'src/modules', 'src/config', 'src/rag', 'src/database', 'src/database/entities', 'tests', 'tests/api', 'tests/e2e', 'tests/fixtures', 'allure-results', 'test-results', 'scripts'].forEach(dir => { if (!fs.existsSync(dir)) { fs.mkdirSync(dir, { recursive: true }); console.log('✅ 建立目錄:', dir); } else { console.log('📁 目錄已存在:', dir); } })\"",
    "setup:env": "node -e \"const fs = require('fs'); if (!fs.existsSync('.env')) { console.log('⚠️  請建立 .env 檔案'); console.log('範例內容：'); console.log('NODE_ENV=development\\nPORT=7939\\nGROK_API_KEY=your_key\\nGEMINI_API_KEY=your_key\\nDATABASE_URL=postgresql://admin:password@localhost:5432/qinguoqinchen\\nNEO4J_URI=bolt://localhost:7687\\nNEO4J_USERNAME=neo4j\\nNEO4J_PASSWORD=password\\nREDIS_URL=redis://localhost:6379\\nPYTHON_AI_URL=http://localhost:8099'); } else { console.log('✅ .env 檔案存在'); }\"",
    "setup:tests": "pnpm run setup:directories && pnpm run playwright:install",
    "setup:modules": "node scripts/setup-modules.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "docker:build": "docker-compose build --no-cache",
    "docker:status": "docker-compose ps",
    "database:setup": "pnpm run database:postgres && pnpm run database:neo4j",
    "database:postgres": "node scripts/check-postgres.js",
    "database:neo4j": "node scripts/check-neo4j.js",
    "database:connect": "node scripts/test-database-connection.js",
    "rag:setup": "node scripts/setup-rag-database.js",
    "rag:ingest": "node scripts/ingest-documents.js",
    "rag:query": "node scripts/rag-query.js",
    "rag:test": "node scripts/test-rag-system.js",
    "rag:embeddings": "node scripts/update-embeddings.js",
    "test": "playwright test --reporter=allure-playwright",
    "posttest": "allure serve allure-results || pnpm exec allure serve allure-results",
    "test:rag": "playwright test tests/api/rag-service.spec.js --reporter=allure-playwright",
    "posttest:rag": "allure serve allure-results || pnpm exec allure serve allure-results"
  },
  "dependencies": {
    "@google-cloud/aiplatform": "^5.7.0",
    "@google-cloud/discoveryengine": "^1.14.0",
    "@google-cloud/storage": "^7.17.2",

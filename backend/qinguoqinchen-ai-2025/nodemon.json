{
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "src/**/*.spec.js",
      "node_modules/**/*",
      "logs/**/*",
      "coverage/**/*"
    ],
    "exec": "node src/main.js",
    "delay": 1000,
    "env": {
      "NODE_ENV": "development"
    },
    "verbose": true,
    "restartable": "rs",
    "colours": true
  }
}